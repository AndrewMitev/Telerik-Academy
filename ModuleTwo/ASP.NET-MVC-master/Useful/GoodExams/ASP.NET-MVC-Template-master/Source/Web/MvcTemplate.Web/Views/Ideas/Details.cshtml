@model MvcTemplate.Web.ViewModels.Ideas.IdeaDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="row">
    <div class="col-md-2">
        <div class="text-center vote-container">
            <p><strong>@Model.Votes</strong></p>
            <p>Votes</p>
        </div>
    </div>
    <div class="col-md-10">
        <h2>@Model.Title</h2>
        <p>@Model.Description</p>
        <p><strong>@Model.Comments.Count() comments</strong></p>
        <br />
        
        <br/>
        @foreach (var comment in Model.Comments)
        {
            <div class="row">
                <p><strong>@comment.AuthorEmail commeted</strong>  @comment.CreatedOn.ToString("yyyy-MM-dd HH:mm")</p>
                <p>
                    @comment.Content
                </p>
            </div>
        }
    </div>
</div>



<p>
    @Html.ActionLink("Back to List", "Index")
</p>
