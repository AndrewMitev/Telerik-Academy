extends ../shared/layout
block main-content
    .row
        .col-md-6.col-md-offset-3
            .panel.panel-primary
                .panel-heading
                    h3.panel-title #{playlist.title}
                .panel-body
                    .row.text-center Description: #{playlist.description}
                    .row.text-center Category: #{playlist.category}
                    .row.text-center Rating: #{playlist.rating}
                    if (playlist.videoUrls)
                    ul
                    each url in playlist.videoUrls
                        li
                            a(href="#{url}") #{url}
                    br
                    span Created On: #{playlist.creationDate.getMonth() + 1 + '/' + playlist.creationDate.getDate() + '/' + playlist.creationDate.getFullYear()} by #{playlist.creator}
    br
    em Comments section:
    br
    br
    each comment in playlist.comments
        h5
            strong #{comment.username}:
                em #{comment.comment}
    br
    br
    form(method="post")
        em
        | add a comment:
        textarea(cols="40" rows="5" name="comment").form-control
        br
        input(type="submit" class="btn btn-lg" value="Comment")
    br
    br
    form(method="post")
        em
        | Rate this playlist:
        select.form-control(name='rating')
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5
        br
        input(type="submit" class="btn btn-lg" value="Rate")